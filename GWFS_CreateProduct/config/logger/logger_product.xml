<?xml version="1.0" encoding="UTF-8"?>
<logger_config>
	<logger name="ProductHandler" level="ALL">
		<context show_timestamp="true" show_method_info="true"
			show_logger_name="true" />
		<handlers>
			<handler type="console" />
			<handler type="file"
				class="com.supermap.commons.logging.handler.impl.FileHandler" prefix="productHandler_"
				suffix=".log" append="true" directory="logs/gwfs/product" limit="1"
				count="10" />
		</handlers>
	</logger>
	
